pipeline {
    agent any
    
    stages {
        stage("clone git hub") {
            steps {
               git branch: "dev" , credentialsId:"github" , url: "https://github.com/sumanbarma011/foodapp"
            }
            
        }
        
        stage("docker image built ") {
            steps {
                sh "docker build -t foodapp -f Dockerfile-dev ."
            }
        }
        stage("push image to dockerhub ") {
            steps {
                withCredentials([usernamePassword(credentialsId:"dockerhub", usernameVariable:"user", passwordVariable:"password" )]) {
                    sh "docker login -u ${env.user} -p ${env.password}"
                    sh "docker tag foodapp ${env.user}/foodapp:dev"
                    sh "docker push ${env.user}/foodapp:dev"
                }
            }
        }
        stage("deploy application") {
            steps {

               sh "docker-compose up -d"
        }
    }
 }
}